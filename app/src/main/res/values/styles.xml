<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@string/default_font</item>
        <item name="android:textSize">16sp</item>
        <item name="android:windowAnimationStyle">@style/slide_activity_animation</item>
    </style>

    <style name="white_text_display">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/white_text_display_card</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="btn_primary" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:text">@string/next</item>
        <item name="strokeColor">@color/colorPrimaryDark</item>
        <item name="strokeWidth">1.8dp</item>
        <item name="android:elevation">4dp</item>
        <item name="android:textColor">@color/colorTextIcons</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="btn_secondary" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:text">@string/skip</item>
        <item name="backgroundTint">@color/colorTextIcons</item>
        <item name="strokeColor">@color/colorDivider</item>
        <item name="strokeWidth">1.8dp</item>
        <item name="android:elevation">4dp</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="btn_text_secondary" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:textColor">@color/colorTextIcons</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="btn_outlined_primary" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="strokeColor">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorTextIcons</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="normal_input_single_layout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="materialThemeOverlay">@style/MyThemeOverlayOutlinedDense</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@color/colorDivider</item>

        <item name="boxStrokeColor">@color/text_input_box_stroke</item>
        <item name="hintTextColor">@color/colorPrimaryLight</item>
    </style>

    <style name="MyThemeOverlayOutlinedDense">
        <item name="editTextStyle">@style/MyTextInputEditText</item>
        <item name="colorControlActivated">@color/colorPrimaryLight</item>
    </style>

    <style name="MyTextInputEditText" parent="@style/Widget.MaterialComponents.TextInputEditText.OutlinedBox.Dense">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="progress_bar" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:progressTint">@color/colorPrimary</item>
        <item name="android:progressBackgroundTint">@color/colorPrimaryDarker</item>
    </style>

    <style name="circle_progress_bar" parent="@style/Widget.AppCompat.ProgressBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:indeterminateTint">@color/colorPrimary</item>
    </style>

    <style name="slide_activity_animation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>

    <style name="exposed_dropdown_menu" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu">
        <item name="android:textColorHint">@color/colorDivider</item>
    </style>

    <style name="exposed_dropdown_text_view">
        <item name="android:colorAccent">@color/transparent</item>
        <item name="android:colorActivatedHighlight">@color/transparent</item>
        <item name="android:colorFocusedHighlight">@color/transparent</item>
    </style>
</resources>