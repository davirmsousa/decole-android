        <activity android:name="br.com.meiadois.decole.presentation.activity.AskForInteractiveModePermissionActivity" />
        <activity android:name="br.com.meiadois.decole.presentation.activity.welcome.PasswordDefinitionActivity" />
        <activity android:name="br.com.meiadois.decole.presentation.activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name=".service.FloatingViewService" />
    </application>

</manifest>