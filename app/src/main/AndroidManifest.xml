<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.meiadois.decole">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:name=".DecoleApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="br.com.meiadois.decole.presentation.user.education.RouteDetailsActivity"/>
        <activity android:name="br.com.meiadois.decole.presentation.user.partnership.PartnershipPopUpActivity"/>
        <activity android:name="br.com.meiadois.decole.presentation.user.account.AccountActivity"/>
        <activity android:name="br.com.meiadois.decole.presentation.user.HomeActivity" />
        <activity android:name="br.com.meiadois.decole.presentation.instagram.HasInstagramAccountActivity" />
        <activity android:name="br.com.meiadois.decole.presentation.instagram.InstagramIntroActivity" />
        <activity android:name="br.com.meiadois.decole.presentation.welcome.WelcomeSlideActivity" />
        <activity android:name="br.com.meiadois.decole.presentation.welcome.WelcomeInfoActivity" />
        <activity android:name="br.com.meiadois.decole.presentation.AskForInteractiveModePermissionActivity" />
        <activity android:name="br.com.meiadois.decole.presentation.auth.RegisterActivity" />

        <activity android:name="br.com.meiadois.decole.presentation.auth.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name=".service.FloatingViewService" />
    </application>

</manifest>